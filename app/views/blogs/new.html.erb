<div class="row-fluid">
	<div class="span12 well">
  

			<%= form_for @blog  do |f| %>
	  <fieldset>
	    <legend>撰写故事</legend>
	    <%= render "shared/error_messages", :target => @blog %>



	    <div class="clearfix">
	      <%= f.label "故事标题" %>
	      <div class="input">
	        <%= f.text_field :title, :class => "xxlarge form-control" %>
	      </div>
			<p class="help-block"></p>
	    </div>

 

		<div class="clearfix wmd-panel">
	      <%= f.label "故事内容" %>
	  	  <div id='wmd-button-bar'></div>
		  <textarea class='wmd-input xxlarge' "rows" = "15" id="blog_body" name="blog[body]"><%=@blog.body%></textarea>
		  <p class="help-block"></p>
	    </div>
	
		
		<div id="wmd-preview" class="wmd-panel wmd-preview">预览</div>


	    <div class="clearfix">
	      <%= f.label "故事标签(多个标签可用空格 分割)" %>
	      <div class="input">
	        <%= f.text_field :tag_list, :class => "xxlarge form-control" %>
	      </div>
		  <p class="help-block"></p>
	    </div>


	    <div class="actions">
	      <%= f.submit "故事写好了", :class => "btn btn-primary", :id=>"submit-it", :disable_with => "保存ing.." %>
	    </div>
	<% end %> 
	
	

	<div class="clearfix"></div>

	</div>
		
 
	
 
 	</div>
</div>

<script>
  (function () {
    var converter = Markdown.getSanitizingConverter();
    var editor = new Markdown.Editor(converter);
    editor.run();

    window.onbeforeunload = function(){
      return '你正在编辑摘要，确定不保存编辑内容吗？';
    };

    $("#submit-it").click(function(){
      window.onbeforeunload = null;
    });

  })();
</script>