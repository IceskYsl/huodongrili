<div class="item apply_form">	
<h3>约聊天申请</h3>
<%= form_for @chat  do |f| %>
<div class="clearfix">
  <%= f.label :when %>
  <div class="input">
    <%= f.text_field :when, :class => "large form-control timepicker","data-behaviour"=>'datepicker' %>
  </div>
</div>

<div class='input-append bootstrap-timepicker-component' style='display: inline;'>
  <input class='dateselect-time input-small' type='text' data-time='12:45 PM'>
  <span class='add-on'><i class='icon-time'></i></span>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker();
  })
</script>

<div class="clearfix">
  <%= f.label "地点" %>
  <div class="input">
    <%= f.text_field :location, :class => "large form-control" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "想聊什么" %>
  <div class="input">
    <%= f.text_field :topic, :class => "xxlarge form-control" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "备注" %>
  <div class="input">
 	<%= f.text_area :body, :rows => "3",:class => "xxlarge form-control" %>
  </div>
</div>
	<br />
	<%= f.hidden_field :account_id,:value=>"#{params[:id]}", :class => "xlarge" %>
    <div class="actions">
      <%= f.submit "发出邀请", :class => "btn btn-primary", :disable_with => "邀请发送ing.." %>
    </div>

<% end %>
</div>