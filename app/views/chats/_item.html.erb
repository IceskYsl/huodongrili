<div class="item apply_form">	
<h3>约聊天申请</h3>
<%= form_for @chat  do |f| %>
<div class="clearfix">
  <%= f.label "聊天时间" %>
  <div class="bootstrap-timepicker input-group xlarge">
	<span class="input-group-addon">日期</span>
    <%= f.text_field :date, :class => "xxlarge form-control","data-behaviour"=>'datepicker' %>
	<span class="input-group-addon">时间</span>
 	<%= f.text_field :when, :class => "large form-control",:id=>"chat_when" %>
   </div>
</div>

 
<script type="text/javascript">
	$('#chat_when').timepicker();
</script>

<div class="clearfix">
  <%= f.label "地点" %>
  <div class="input">
    <%= f.text_field :location, :class => "large form-control" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "想聊什么" %>
  <div class="input">
    <%= f.text_field :topic, :class => "xxlarge form-control" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "备注" %>
  <div class="input">
 	<%= f.text_area :body, :rows => "6",:class => "xxlarge form-control" %>
  </div>
</div>
	<br />
	<%= f.hidden_field :account_id,:value=>"#{params[:id]}", :class => "xlarge" %>
    <div class="actions">
      <%= f.submit "发出邀请", :class => "btn btn-primary", :disable_with => "邀请发送ing.." %>
    </div>

<% end %>
</div>