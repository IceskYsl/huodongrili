<div class="item apply_form">	
<h3>约聊天申请</h3>
<%= form_for @chat  do |f| %>
<div class="clearfix">
  <%= f.label :when %>
  <div class="input">
    <%= f.datetime_select :when, :class => "xlarge" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "地点" %>
  <div class="input">
    <%= f.text_field :location, :class => "xlarge" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "想聊什么" %>
  <div class="input">
    <%= f.text_field :topic, :class => "xxlarge" %>
  </div>
</div>
<div class="clearfix">
  <%= f.label "备注" %>
  <div class="input">
 	<%= f.text_area :body, :rows => "3",:class => "xxlarge" %>
  </div>
</div>
	<br />
	<%= f.hidden_field :account_id,:value=>"#{params[:id]}", :class => "xlarge" %>
    <div class="actions">
      <%= f.submit "发出邀请", :class => "btn primary", :disable_with => "邀请发送ing.." %>
    </div>

<% end %>
</div>